<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true" >

    <include
        android:id="@+id/sos_include"
        layout="@layout/head" />

    <include
        android:id="@+id/sos_bottom"
        layout="@layout/sos_bottom" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/sos_bottom"
        android:layout_below="@id/sos_include"
        android:background="@color/background"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:layout_weight="0"
                android:background="@color/divide"
                android:contentDescription="@string/img" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background_selector"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/qiuzhuzhuti"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/sp_sos_theme"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:entries="@array/spinner_sos_theme"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0"
                android:background="@color/divide"
                android:contentDescription="@string/img" />

            <LinearLayout
                android:id="@+id/ll_sos_date"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/btn_background_selector"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qiuzhushijian"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_sos_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="95"
                    android:textSize="15sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="5"
                    android:background="@drawable/btn_right_arrow_selector"
                    android:duplicateParentState="true" />
                <!-- <EditText -->
                <!-- android:id="@+id/et_sos_date" -->
                <!-- android:layout_width="fill_parent" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_marginLeft="30dp" -->
                <!-- android:hint="@string/qiuzhushijian" -->
                <!-- android:inputType="datetime" -->
                <!-- android:maxLength="20" -->
                <!-- android:maxLines="1" -->
                <!-- android:singleLine="true" -->
                <!-- android:textSize="15sp" -->
                <!-- android:focusable="false"/> -->

            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0"
                android:background="@color/divide"
                android:contentDescription="@string/img" />

            <LinearLayout
                android:id="@+id/ll_sos_addr"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/btn_background_selector"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qiuzhudidian"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_sos_addr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="95"
                    android:textSize="15sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="5"
                    android:background="@drawable/btn_right_arrow_selector"
                    android:duplicateParentState="true" />
                <!-- <EditText -->
                <!-- android:id="@+id/et_sos_addr" -->
                <!-- android:layout_width="fill_parent" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_marginLeft="30dp" -->
                <!-- android:focusable="false" -->
                <!-- android:hint="@string/qiuzhudidian" -->
                <!-- android:maxLength="20" -->
                <!-- android:maxLines="1" -->
                <!-- android:singleLine="true" -->
                <!-- android:textSize="15sp" /> -->
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/divide"
                android:contentDescription="@string/img" />

            <LinearLayout
                android:id="@+id/ll_sos_phone"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:background="@drawable/btn_background_selector"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lianxifangshi"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_sos_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="95"
                    android:textSize="15sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="5"
                    android:background="@drawable/btn_right_arrow_selector"
                    android:duplicateParentState="true" />
                <!-- <EditText -->
                <!-- android:id="@+id/et_sos_phone" -->
                <!-- android:layout_width="fill_parent" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_marginLeft="30dp" -->
                <!-- android:hint="@string/lianxifangshi" -->
                <!-- android:inputType="phone" -->
                <!-- android:maxLength="11" -->
                <!-- android:maxLines="1" -->
                <!-- android:singleLine="true" -->
                <!-- android:textSize="15sp" /> -->
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0"
                android:background="@color/divide"
                android:contentDescription="@string/img" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background_selector"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qiuzhuxiangqing"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_sos_more"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="top"
                    android:hint="@string/qiuzhuxiangqing"
                    android:maxLength="1000"
                    android:minLines="5"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:layout_weight="0"
                android:background="@color/divide"
                android:contentDescription="@string/img" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>