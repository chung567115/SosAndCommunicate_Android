<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <include
        android:id="@+id/communicate_details_include"
        layout="@layout/head" />

    <include
        android:id="@+id/communicate_details_bottom"
        layout="@layout/communicate_details_bottom" />

    <ScrollView
        android:id="@+id/sv_communicate_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/communicate_details_bottom"
        android:layout_below="@id/communicate_details_include"
        android:background="@color/background"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <LinearLayout
                android:id="@+id/ll_communicate_blog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_communicate_details_headpic"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/img" />

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_communicate_details_username"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="left"
                            android:textColor="#000000"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/tv_communicate_details_time"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:gravity="left"
                            android:paddingLeft="3dp"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_communicate_details_goalsrank"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0.3dp"
                    android:layout_weight="0"
                    android:background="@color/divide"
                    android:contentDescription="@string/img" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_background_selector"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/tv_communicate_details1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/tiwenyonghu"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_communicate_details_nickname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_communicate_details1"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/txt_gray"
                        android:textSize="15sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0"
                    android:background="@color/divide"
                    android:contentDescription="@string/img" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_background_selector"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/tv_communicate_details2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/suoshuzhuti"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_communicate_details_theme"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_communicate_details2"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/txt_gray"
                        android:textSize="15sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/divide"
                    android:contentDescription="@string/img" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_background_selector"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/tv_communicate_details3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/tichuwenti"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_communicate_details_question"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_communicate_details3"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/txt_gray"
                        android:textSize="15sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0"
                    android:background="@color/divide"
                    android:contentDescription="@string/img" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_background_selector"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/tv_communicate_details4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="@string/tiwenxiangqing"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_communicate_details_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@id/tv_communicate_details4"
                        android:text=""
                        android:textColor="@color/txt_gray"
                        android:textSize="15sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0.3dp"
                    android:layout_weight="0"
                    android:background="@color/divide"
                    android:contentDescription="@string/img" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_communicate_blog"
                android:orientation="vertical" >

                <com.chung.tools.HelpCommentListView
                    android:id="@+id/commentLV"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>