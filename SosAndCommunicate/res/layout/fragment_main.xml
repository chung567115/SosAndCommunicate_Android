<!--         android:layout_width="fill_parent" -->
<!--         android:layout_height="180dp" /> -->

    <com.chung.tools.MyListView
        android:id="@+id/lv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white" />

</LinearLayout>